<html>
  <head>
    <title>
      <%= title %>
    </title>
    <script
      src="https://kit.fontawesome.com/77ebcf6ce0.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/home.css" />
  </head>
  <body>
    <h1 id="page-heading">
      <i class="fas fa-address-book"></i>&nbsp My Contact List
    </h1>
    <div id="contact-list-container">
      <ul>
        <% for (let i of contact_list) { %>
        <li id="contact">
          <div id="details">
            <p><%= i.name %></p>
            <p><%= i.phone %></p>
          </div>
          <div id="delete-button">
            <a href="/delete-contact/?id=<%= i._id %>">
              <i id="button1" class="fas fa-trash"></i>
            </a>
          </div>
        </li>

        <% } %>
      </ul>
    </div>

    <form id="new-contact-form" action="/create-contact" method="POST">
      <input
        id="input"
        type="text"
        name="name"
        placeholder="enter name"
        required
      />
      <input
        id="input"
        type="number"
        name="phone"
        placeholder="enter number"
        required
      />
      <button id="button" type="submit">Add Contact</button>
    </form>
    <script type="text/javascript" src="/js/home.js"></script>
  </body>
</html>
